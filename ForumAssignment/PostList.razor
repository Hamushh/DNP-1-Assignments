@page "/posts"
@attribute [Authorize]
@using DTOs.PostDTOs
@using ClientBlazorApp.Services.ServiceInterfaces
@using Microsoft.AspNetCore.Authorization
@inject IPostService PostService
@inject NavigationManager Nav
<h3>PostList</h3>

@if (posts == null)
{
    <p><em>Loading...</em></p>
}
else if (!posts.Any())
{
    <p>No posts yet. <a href="/create-post">Create one?</a></p>
}
else
{
    <ul class="list-group">
        @foreach (var post in posts)
        {
            <li class="list-group-item">
                <b>@post.Title</b>
                <button class="btn btn-link" @onclick="() => ViewDetails(post.UserId)">View Details</button>
            </li>
        }
    </ul>
}

@code {
    private List<CreatePostDTO>? posts;

    protected override async Task OnInitializedAsync()
    {
        posts = await PostService.GetAllPostsAsync();
    }

    private void ViewDetails(int id)
    {
        Nav.NavigateTo($"/post/{id}");
    }
}