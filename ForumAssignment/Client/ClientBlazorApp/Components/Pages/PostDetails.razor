@page "/post/{Id:int}"
@using System.Security.Claims
@using ClientBlazorApp.Services.ServiceInterfaces
@using Microsoft.AspNetCore.Components.Authorization
@using DTOs.CommentDTOs
@using DTOs.PostDTOs

@inject IPostService PostService
@inject ICommentService commentService

<h3>Post Details</h3>

@if (post is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="card p-3 mb-3">
        <h4>@post.Title</h4>
        <p>@post.Body</p>
        <p><i>By @post.AuthorName (UserId: @post.UserId)</i></p>
    </div>

    <h5>Comments</h5>

    @if (comments.Any())
    {
        <ul class="list-group mb-3">
            @foreach (var c in comments)
            {
                <li class="list-group-item">
                    <div><b>User @c.UserId</b></div>
                    <div>@c.Body</div>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No comments yet.</p>
    }

    <AuthorizeView>
        <Authorized>
            <h5>Add Comment</h5>
            <div class="mb-2">
                <label class="form-label">Comment</label>
                <textarea class="form-control" rows="3" @bind="newComment.Body"></textarea>
            </div>
            <button class="btn btn-primary" @onclick="AddComment">Add Comment</button>
        </Authorized>
        <NotAuthorized>
            <p class="text-muted">You must be logged in to comment.</p>
        </NotAuthorized>
    </AuthorizeView>

    @if (!string.IsNullOrEmpty(message))
    {
        <p class="text-success mt-2">@message</p>
    }
    @if (!string.IsNullOrEmpty(error))
    {
        <p class="text-danger mt-2">@error</p>
    }
}

@code {
    [Parameter] public int Id { get; set; }

    private CreatePostDTO? post;
    private List<CreateCommentDTO> comments = new();

    // We only bind the body; author id will come from claims
    private CreateCommentDTO newComment = new() { PostId = 0, Body = "" };

    private string? message, error;

    [CascadingParameter] public Task<AuthenticationState> State { get; set; } = default!;
    private int? currentUserId;

    protected override async Task OnParametersSetAsync()
    {
        // load post + comments
        post = await PostService.GetSinglePostAsync(Id);
        comments = await commentService.GetSingleCommentAsync(Id);

        // set form defaults
        newComment = new CreateCommentDTO { PostId = Id, UserId = 0, Body = "" };

        // read user id from claims (if logged in)
        var auth = await State;
        var user = auth.User;
        if (user.Identity?.IsAuthenticated == true)
        {
            var idStr = user.Claims.SingleOrDefault(c => c.Type == "Id")?.Value;
            if (int.TryParse(idStr, out var uid))
                currentUserId = uid;
        }
        else
        {
            currentUserId = null;
        }
    }

    private async Task AddComment()
    {
        try
        {
            if (currentUserId is null)
            {
                error = "You must be logged in to comment.";
                message = null;
                return;
            }

            // ensure correct post + author ids
            newComment.PostId = Id;
            newComment.UserId = currentUserId.Value;

            var added = await commentService.AddCommentAsync(newComment);

            // optimistic update
            comments.Insert(0, added);
            newComment.Body = "";
            message = " Comment added!";
            error = null;
        }
        catch (Exception ex)
        {
            error = $" {ex.Message}";
            message = null;
        }
    }
}